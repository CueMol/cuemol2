  <style id="EgLineThin" desc="Edge line (thin)" type="renderer"
    egtype="edges" eglinew="0.03"/>
  <style id="EgLineNormal" desc="Edge line (normal)" type="renderer"
    egtype="edges" eglinew="0.06"/>
