  <!-- ========== default material definition (for POV-Ray) ========== -->

  <setting type="pov">
    <preamble>
<![CDATA[
#include "colors.inc"
#include "metals.inc"
#include "woods.inc"
#include "stones.inc"
]]>
    </preamble>
  </setting>

  <material id="default">
    <def type="pov">
<![CDATA[
texture {
  finish {
   ambient 0.2
   diffuse 0.8  brilliance 1.0
   specular 0.4  roughness 0.01
  }
  pigment { color rgbt @COLOR@ }
}
]]>
    </def>
  </material>
    
  <material id="spec_metal">
    <def type="pov">
      texture {finish {F_MetalD} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="diff_metal">
    <def type="pov">
      texture {finish {F_MetalA} pigment { color rgbt @COLOR@ }}
    </def>
  </material>
  
  <material id="matte">
    <def type="pov">
      texture {finish {ambient 0.3} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="shadow">
    <def type="pov">
      texture {finish {ambient 0.75 diffuse 0.0 specular 0.0} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="nolighting">
    <def type="pov">
      texture {finish {ambient 1.0 diffuse 0.0 specular 0.0} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="toon1">
    <def type="pov">
      texture {finish {ambient 0.0 diffuse 0.85 brilliance 0} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="toon2">
    <def type="pov">
      texture {finish {ambient 0.0 diffuse 0.85 brilliance 0 specular 10000 roughness 0.005} pigment { color rgbt @COLOR@ }}
    </def>
  </material>

  <material id="metallic_chrome">
